<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ehu.das.bestchoice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/toolbar_title_settings"
            android:launchMode="singleTask" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/toolbar_title_login"
            android:launchMode="singleTask" />


        <activity android:name=".AddDuelActivity"
            android:label="@string/toolbar_title_add_duel"/>
        <activity android:name=".RankingActivity"
            android:label="@string/toolbar_title_ranking"/>
        <activity android:name=".StatsActivity"
            android:label="@string/toolbar_title_stats"/>
        <activity android:name=".DuelActivity"
            android:label="@string/toolbar_title_duel"></activity>

    </application>

</manifest>